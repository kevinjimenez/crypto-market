generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model crypto_market {
  id        String   @id @default(uuid()) @db.Uuid
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  name      String   @db.VarChar(50)
  image     String
  symbol    String
  current_price  Float
  high_1h  Float
  low_1h  Float
  avg  Float
  signal String   @db.VarChar(1)
  trend  String
  is_current  Boolean
  tag  String
}